import Image from "next/image";
import styles from '@/app/ui/home.module.css';
import { inter } from '@/app/ui/fonts';

interface FaceCircleProps {
  src: string;
  size?: number; // diameter of the circle in px
  alt: string;
  focusX?: number; // horizontal focus 0-100%
  focusY?: number; // vertical focus 0-100%
}

export  function FaceCircle({
  src,
  size = 150,
  alt,
  focusX = 50,
  focusY = 50,
}: FaceCircleProps) {
  return (
    <div
      style={{
        width: `${size}px`,
        height: `${size}px`,
        borderRadius: '50%',
        overflow: 'hidden',
        position: 'relative',
      }}
    >
      <Image
        src={src}
        alt={alt}
        fill
        style={{
          objectFit: 'cover',
          objectPosition: `${focusX}% ${focusY}%`,
        }}
      />
    </div>
  );
}

export default function Test() {
  return (
    <main className="flex min-h-screen flex-col p-6">
      <div className={styles.shape} />
      <h1 className={`${inter.className} antialiased`}> gLearn </h1>
      <FaceCircle
          src="/joemon.jpg"
          size={200}           // circle diameter
          alt="Joe's face"
          focusX={50}          // 50% horizontally (center)
          focusY={30}          // 30% vertically (adjust to center face)
          />
      </main>
  )
}
